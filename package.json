    "dev": "next dev --turbopack",
    "build": "next build",
    "build:win": "cross-env SHARP_IGNORE_GLOBAL_LIBVIPS=1 next build",
    "start": "next start",
    "lint": "eslint --fix",
    "postinstall": "node -e \"const fs=require('fs');const dirs=['sharp-darwin-arm64','sharp-darwin-x64','sharp-libvips-darwin-arm64','sharp-libvips-darwin-x64','sharp-linux-arm64','sharp-linux-x64','sharp-libvips-linux-arm64','sharp-libvips-linux-x64'].map(d=>'node_modules/@img/'+d);dirs.forEach(d=>{try{fs.mkdirSync(d,{recursive:true});fs.writeFileSync(d+'/package.json','{}')}catch(e){}})\"",
  "security:check": "node ./scripts/run-security-check.cjs",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "electron:dev": "tsc -p electron/tsconfig.json && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:dev:win": "tsc -p electron/tsconfig.json && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:start": "tsc -p electron/tsconfig.json && electron .",
    "electron:build:win": "npm run build:win && tsc -p electron/tsconfig.json && electron-builder --win",
    "electron:publish:win": "npm run build:win && tsc -p electron/tsconfig.json && electron-builder --win --publish always"
  },
